extends layout
block content
    h1 Make your account here
    form(action="/register" method="post")
        h3 Sign Up
        label(for="fn") First name:
            input(type="text" name="firstName" class="require")
        br
        label(for="ln") Last name:
            input(type="text" name="lastName" class="require")
        br
        label(for="un") Username:
            input(type="text" name="username" class="require")
        br
        button(type="submit") Register    